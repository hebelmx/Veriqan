{
  "ConnectionStrings": {
    "DefaultConnection": "Server=DESKTOP-FB2ES22\\SQL2022;Database=PrismaID;Integrated Security=True;Encrypt=True;TrustServerCertificate=True;MultipleActiveResultSets=true",
    "ApplicationConnection": "Server=DESKTOP-FB2ES22\\SQL2022;Database=Prisma;Integrated Security=True;Encrypt=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "BrowserAutomation": {
    "Headless": true,
    "BrowserLaunchTimeoutMs": 30000,
    "PageTimeoutMs": 30000,
    "DefaultWebsiteUrl": "https://www.gob.mx/uif",
    "FilePatterns": [ "*.pdf", "*.xml", "*.docx" ]
  },
  "NavigationTargets": {
    "SiaraUrl": "https://localhost:5002",
    "ArchiveUrl": "https://archive.org",
    "GutenbergUrl": "https://www.gutenberg.org"
  },
  "FileStorage": {
    "StorageBasePath": "./Downloads"
  },
  "SLA": {
    "CriticalThreshold": "04:00:00",
    "WarningThreshold": "24:00:00",
    "BackgroundUpdate": {
      "UpdateIntervalSeconds": 60,
      "BatchSize": 100,
      "MaxRetries": 3,
      "RetryDelaySeconds": 5
    },
    "Resilience": {
      "CircuitBreakerFailureThreshold": 5,
      "CircuitBreakerResetTimeout": "00:01:00",
      "CircuitBreakerSuccessThreshold": 3,
      "MaxRetryAttempts": 3,
      "RetryBaseDelay": "00:00:01",
      "RetryMaxDelay": "00:00:08",
      "OperationTimeout": "00:00:05"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/exxercube-prisma-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "ExxerCube.Prisma.Web.UI"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "OpenTelemetry": {
    "ServiceName": "ExxerCube.Prisma.Web.UI",
    "ServiceVersion": "1.0.0",
    "Seq": {
      "Endpoint": "http://localhost:5341",
      "ApiKey": null
    },
    "Tracing": {
      "Enabled": true,
      "SamplingRatio": 1.0
    },
    "Metrics": {
      "Enabled": true,
      "ExportInterval": "00:00:10"
    }
  },
  "AllowedHosts": "*"
}
