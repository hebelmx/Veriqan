<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <LangVersion>preview</LangVersion>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>ExxerAI.Gatekeeper</AssemblyName>
    <RootNamespace>ExxerAI.Gatekeeper</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>

  </PropertyGroup>

  <PropertyGroup>
    <Description>External integrations and API connectors for the ExxerAI evocative architecture.</Description>
    <PackageTags>exxerai;infrastructure;gatekeeper;external;integrations;api</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\ExxerAI.Domain\ExxerAI.Domain.csproj" />
    <ProjectReference Include="..\..\Core\ExxerAI.Application\ExxerAI.Application.csproj" />
    <ProjectReference Include="..\ExxerAI.Axis\ExxerAI.Axis.csproj" />
      <ProjectReference Include="..\..\Core\ExxerAi.Axioms\ExxerAI.Axioms.csproj" />
  </ItemGroup>

  <!-- System Results -->
  <ItemGroup  Label="IndQuestResults">
    <PackageReference Include="IndQuestResults" />
  </ItemGroup>
  <!-- GLOBAL USINGS -->
  <ItemGroup Label="Global Usings">
    <Using Include="IndQuestResults" />
  </ItemGroup>
</Project>