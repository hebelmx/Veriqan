    // Assert
    result.IsSuccess.ShouldBeTrue();
    result.Value.CustomerId.ShouldBe(orderRequest.CustomerId);
    result.Value.Items.Count.ShouldBe(2);
    result.Value.TotalAmount.ShouldBe(125.00m);
}
```
